pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
        git branch: 'main',
            url: 'https://github.com/marcalexb/hello-jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t hello-world-docker .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run --rm hello-world-docker'
                }
            }
        }
    }
}
